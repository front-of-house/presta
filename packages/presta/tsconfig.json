{
  "extends": "@tsconfig/node12/tsconfig.json",
  "include": ["lib"],
  "exclude": ["node_modules", "runtime", "utils"],
  "compilerOptions": {
    "lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string", "dom"],
    // ensures .d.ts files are output in the declarationDir
    "rootDir": "lib",
    "declaration": true,
    "declarationDir": "./",
    "resolveJsonModule": true,
    "strictPropertyInitialization": false
  }
}
