{
  "name": "presta",
  "version": "0.21.4",
  "description": "Hyper minimal framework for the modern web.",
  "main": "presta.js",
  "bin": {
    "presta": "cli.js"
  },
  "scripts": {
    "test": "rm -rf ./fixtures && NODE_ENV=test node test",
    "test:watch": "NODE_ENV=test nodemon --ignore fixtures/ test",
    "format": "prettier-standard --format",
    "cloc": "npx cloc lib/*.js cli.js html.js load.js",
    "build": "esbuild cli.ts --bundle --platform=node --outfile=cli.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "prettier-standard --format --staged && npm run test",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/sure-thing/presta.git"
  },
  "author": "estrattonbailey",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sure-thing/presta/issues"
  },
  "homepage": "https://github.com/sure-thing/presta#readme",
  "dependencies": {
    "@types/debug": "^4.1.5",
    "@types/exit": "^0.1.31",
    "@types/fs-extra": "^9.0.11",
    "@types/mime-types": "^2.1.0",
    "@types/picomatch": "^2.2.4",
    "@types/sade": "^1.7.2",
    "ansi-colors": "^4.1.1",
    "chokidar": "^3.4.3",
    "debug": "^4.1.1",
    "deepmerge": "^4.2.2",
    "esbuild-register": "^2.5.0",
    "exit": "^0.1.2",
    "filewatcher": "^3.0.1",
    "fs-extra": "^9.0.1",
    "get-port": "^5.1.1",
    "matched": "^5.0.0",
    "mime-types": "^2.1.30",
    "module-alias": "^2.2.2",
    "ms": "^2.1.2",
    "pocket.io": "^0.1.4",
    "query-string": "^6.13.7",
    "regexparam": "^1.3.0",
    "route-sort": "^1.0.0",
    "sade": "^1.7.3",
    "sirv": "^1.0.7",
    "typescript": "^4.3.2",
    "watch-dependency-graph": "^2.4.0"
  },
  "devDependencies": {
    "baretest": "^2.0.0",
    "commitizen": "^4.2.2",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^4.3.0",
    "nodemon": "^2.0.4",
    "prettier-standard": "^16.4.1",
    "semantic-release": "^17.4.2"
  }
}
